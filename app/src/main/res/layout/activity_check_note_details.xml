<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:layout_marginStart="14dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="15">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/backspace_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:hint="Input notice"
            android:layout_marginStart="16dp"
            android:layout_weight="1">
            <EditText
                android:id="@+id/title_edit_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:backgroundTint="@android:color/transparent"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:hint="Input Title"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Today's Workflow"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <CheckBox
                    android:id="@+id/first_check_box"
                    style="@style/CheckBoxStyle"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/first_check_box_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    style="@style/CheckNoteTextViewStyle"
                    android:hint="Input notice"
                    tools:text="@tools:sample/lorem"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <CheckBox
                    android:id="@+id/second_check_box"
                    android:layout_width="25dp"
                    style="@style/CheckBoxStyle"
                    android:layout_gravity="center"
                    android:layout_height="20dp"/>
                <EditText
                    android:id="@+id/second_check_box_edit"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_height="wrap_content"
                    style="@style/CheckNoteTextViewStyle"
                    android:hint="Input notice"
                    tools:text="@tools:sample/lorem"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <CheckBox
                    android:id="@+id/third_check_box"
                    android:layout_width="25dp"
                    style="@style/CheckBoxStyle"
                    android:layout_gravity="center"
                    android:layout_height="20dp"/>
                <EditText
                    android:id="@+id/third_check_box_edit"
                    android:layout_width="wrap_content"
                    android:hint="Input notice"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    style="@style/CheckNoteTextViewStyle"
                    tools:text="@tools:sample/lorem"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <CheckBox
                    android:id="@+id/fourth_check_box"
                    android:layout_width="25dp"
                    android:layout_gravity="center"
                    style="@style/CheckBoxStyle"
                    android:layout_height="20dp"/>
                <EditText
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/fourth_check_box_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Input notice"
                    style="@style/CheckNoteTextViewStyle"
                    tools:text="@tools:sample/lorem"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <CheckBox
                    android:id="@+id/fifth_check_box"
                    android:layout_width="25dp"
                    android:layout_gravity="center"
                    style="@style/CheckBoxStyle"
                    android:layout_height="20dp"/>
                <EditText
                    android:backgroundTint="@android:color/transparent"
                    android:id="@+id/fifth_check_box_edit"
                    android:layout_width="wrap_content"
                    android:hint="Input notice"
                    android:layout_height="wrap_content"
                    style="@style/CheckNoteTextViewStyle"
                    tools:text="@tools:sample/lorem"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <CheckBox
                    android:id="@+id/sixth_check_box"
                    android:layout_width="25dp"
                    style="@style/CheckBoxStyle"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/sixth_check_box_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CheckNoteTextViewStyle"
                    tools:text="@tools:sample/lorem"/>
            </LinearLayout>
            <TextView
                android:id="@+id/last_edited_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins"
                android:singleLine="true"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Last edited: 17.12.2021 18:06"/>
        </LinearLayout>
        <Button
            android:id="@+id/check_note_button_save_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:text="Save Changes" />
    </LinearLayout>
</LinearLayout>